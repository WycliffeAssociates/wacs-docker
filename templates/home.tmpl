<div class="home">
	<div class="ui stackable middle very relaxed page grid">
		<div class="sixteen wide center aligned centered column">
			<div>
				<img class="logo" src="{{AppSubUrl}}/img/wacs-full.svg" />
			</div>
		</div>
	</div>
	{{if eq .Lang "de-DE"}}
	{{else if eq .Lang "zh-CN"}}
	{{else if eq .Lang "fr-FR"}}
